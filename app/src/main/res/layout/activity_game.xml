<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <LinearLayout
        android:id="@+id/hints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/seeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hint_seeds" />

        <Button
            android:id="@+id/peelable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hint_peelable" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFruits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hints"/>

    <LinearLayout
        android:id="@+id/seedsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/peelableLL"
        android:orientation="vertical"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/seedsLabel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Seeds:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seedsLabel"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seeds1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/seeds2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/seeds3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/seeds4"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/peelableLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rvFruits"
        android:orientation="vertical"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/peelableLabel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Peelable:" />
        <LinearLayout
            android:id="@+id/peelableHints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/peelableLabel"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/peelable1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/peelable2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/peelable3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/peelable4"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/testTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/testTextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="@dimen/spinner_choice"
                android:layout_height="@dimen/spinner_choice"
                android:layout_weight="1"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="@dimen/spinner_choice"
                android:layout_height="@dimen/spinner_choice"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="@dimen/spinner_choice"
                android:layout_height="@dimen/spinner_choice"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="@dimen/spinner_choice"
                android:layout_height="@dimen/spinner_choice"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/submit_user_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit" />
    </LinearLayout>




</RelativeLayout>